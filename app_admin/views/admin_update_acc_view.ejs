  <body id="registration">
    <!-- create nav bar -->

    <main class="d-flex flex-nowrap">
      <!-- create sidebar  -->
      <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark" style="width: 280px">
        <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <svg class="bi pe-none me-2" width="40" height="32"><use xlink:href="#bootstrap" /></svg>
          <img src="/images/logo.png" alt="logo" width="80%" height="80%" />
        </a>
        <hr />
        <ul class="nav nav-pills flex-column mb-auto">
          <li><a href="#dashboard" class="nav-link text-white">Update Account</a></li>
        </ul>
        <hr />

        <!-- create user dropdown list  -->
        <div class="dropdown">
          <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://e7.pngegg.com/pngimages/178/595/png-clipart-user-profile-computer-icons-login-user-avatars-monochrome-black.png " alt="" width="32" height="32" class="rounded-circle me-2" />
            <strong>User</strong>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
            <li><a class="dropdown-item" href="#">Settings</a></li>
            <li><a class="dropdown-item" href="#">Profile</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="#">Sign out</a></li>
          </ul>
        </div>
      </div>

      <!-- create a section showing to prompt user details -->
      <div class="page-content">
        <h2 style="padding: 1%">Update User Account</h2>
        <div class="content-wrapper">
          <div class="login-box">
            <h3 style="color: #ffffff">Update Form</h3>
            <form method="post" action="/update-success" id="user-form">
              <div class="user-box" style="display: block">
                <label>Username</label>
                <input type="text" name="username" value="<%= account.username %>" />
              </div>
              <div class="user-box">
                <label>User Email</label>
                <input type="email" name="email" value="<%= account.email %>" />
              </div>
              <div class="user-box">
                <label>Password</label>
                <input type="password" name="password" value="<%= account.password %>" />
              </div>
              <div class="user-box">
                <label>Contact Info</label>
                <input type="text" name="phonenum" value="<%= account.phonenum %>" />
              </div>
              <div class="user-box">
                <label>Account Type</label>
                <select name="usertype" form="user-form" value="<%= account.usertype %>">
                  <option value="customer">Customer</option>
                  <option value="employee">Employee</option>
                </select>
              </div>
              <input type="submit" class="action-btn" />
            </form>
          </div>
        </div>
      </div>
    </main>

